<!DOCTYPE html>
<html lang="en">
<head>
    <%    users.forEach( (user) =>{ %>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title><%= user.Name %> Attendance</title>
	<%- include("boot_head")%>
	<style type="text/css">
		table tr{
			text-align:center;
		}
	</style>
</head>
<body style="background-color: rgb(203, 203, 221);">
	<div class="my-2 text-center py-3">
		
		<h2 class="text-center fw-bold py-2" ><%= user.Name %> attendance till date : <span style="color: rgb(255, 0, 0)"> <%= user.Tilldate %></span></h2>
        <table class="table table-striped table-light table-bordered w-50 mx-auto">
			<tr>
				<th>Physics</th>
				<th>Chemistry</th>
				<th>Mathematics</th>
				<th>Overall class Attendance in %</th>
			</tr>
			<tr>
				<td><%= user.Physics %>/50</td>
				<td><%= user.Chemistry %>/50</td>
				<td><%= user.Mathematics %>/50</td>
				<td><span id="pr<%= user.Identity %>"></span>%</td>
			</tr>
		  </table>
		</div>
	<script type="text/javascript">
		var per=(Number("<%= user.Physics %>")+Number("<%= user.Chemistry %>")+Number("<%= user.Mathematics %>")*100)/150;
		document.getElementById('pr<%= user.Identity %>').innerHTML=per.toFixed(2);
	</script>
	</body>
	<% }) %>


<%- include("boot_low")%>